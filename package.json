{
  "name": "ordersystem",
  "version": "1.0.0",
  "description": "order system with tdd, ddd",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --setupFiles --forceExit --detectOpenHandles",
    "start": "node dist/src/app.js",
    "build": "tsc -p .",
    "dev": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node\" src/app.ts",
    "postgres:up": "docker compose --env-file ./config/.env.test up -d postgres ",
    "postgres:down": "docker compose --env-file ./config/.env.test down --remove-orphans"
  },
  "author": "ohbin kwon",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/express-serve-static-core": "^4.17.31",
    "@types/jest": "^29.2.2",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@mikro-orm/core": "^5.5.2",
    "@mikro-orm/postgresql": "^5.5.2",
    "express": "^4.18.2"
  }
}
