{
  "name": "ordersystem",
  "version": "1.0.0",
  "description": "order system with tdd, ddd",
  "main": "index.js",
  "scripts": {
    "test": "NODE_ENV=test jest --testPathIgnorePatterns=/e2e --setupFiles --forceExit --detectOpenHandles",
    "e2e": "NODE_ENV=development jest e2e.test.ts --setupFiles --forceExit --detectOpenHandles",
    "start": "node dist/src/app.js",
    "build": "tsc -p .",
    "dev": "nodemon --watch \"src/**/*.ts\" --exec \"ts-node\" src/app.ts",
    "postgres:up": "docker compose --env-file ./config/.env.test up -d postgres",
    "postgres:down": "docker compose --env-file ./config/.env.test down --remove-orphans",
    "postgres:migrate-create": "npx mikro-orm migration:create",
    "postgres:migrate-up": "npx mikro-orm migration:up"
  },
  "author": "ohbin kwon",
  "license": "ISC",
  "devDependencies": {
    "@mikro-orm/cli": "5.5.3",
    "@types/express": "^4.17.14",
    "@types/express-serve-static-core": "^4.17.31",
    "@types/jest": "^29.2.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0",
    "@mikro-orm/migrations": "5.5.3"
  },
  "dependencies": {
    "@mikro-orm/core": "5.5.3",
    "@mikro-orm/postgresql": "5.5.3",
    "express": "^4.18.2"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/repository/mikroOrm/config/config.ts",
      "./dist/repository/mikroOrm/config/config.js"
    ]
  }
}
